{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Homey App",
      "program": "${workspaceFolder}/node_modules/homey/compose/run.js",
      "args": [
        "run",
        "--app=${workspaceFolder}",
        "--clean",
        "--inspect=9229",
        "--timeout=60000"
      ],
      "console": "integratedTerminal",
      "protocol": "inspector",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/.homeybuild/**/*.js"],
      "skipFiles": ["<node_internals>/**"],
      "preLaunchTask": "npm: build"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Homey Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--timeout",
        "999999",
        "--colors",
        "--require",
        "ts-node/register",
        "--require",
        "tsconfig-paths/register",
        "test/**/*.test.ts"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "protocol": "inspector",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/.homeybuild/**/*.js"],
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
