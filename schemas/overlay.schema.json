{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tuya Device Overlay",
  "type": "object",
  "required": ["status", "confidence", "sources", "productIds", "dp"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["proposed", "confirmed", "disabled"],
      "description": "Overlay status - only 'confirmed' is used at runtime"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Confidence score from inference system"
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      },
      "minItems": 1,
      "maxItems": 5,
      "description": "Source URLs for this overlay data"
    },
    "productIds": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^TS[0-9A-F]{4,}$"
      },
      "minItems": 1,
      "description": "Tuya product IDs"
    },
    "manufacturerName": {
      "type": "string",
      "pattern": "^_T[ZE][0-9A-Z]{4}_.*$",
      "description": "Zigbee manufacturer name"
    },
    "type": {
      "type": "string",
      "enum": ["plug", "climate-trv", "cover-curtain", "remote-scene", "generic"],
      "description": "Device type/family"
    },
    "dp": {
      "type": "object",
      "patternProperties": {
        "^[0-9]+$": {
          "type": "object",
          "required": ["cap", "to"],
          "properties": {
            "cap": {
              "type": "string",
              "description": "Homey capability name"
            },
            "to": {
              "type": "string",
              "enum": ["bool", "num/1", "num/10", "num/100", "num/1000", "raw", "enum"],
              "description": "Conversion type"
            }
          }
        }
      },
      "description": "DP to capability mappings"
    },
    "reports": {
      "type": "object",
      "properties": {
        "power_interval_sec": { "type": "integer", "minimum": 1 },
        "energy_interval_sec": { "type": "integer", "minimum": 1 },
        "temperature_interval_sec": { "type": "integer", "minimum": 1 },
        "battery_interval_sec": { "type": "integer", "minimum": 1 },
        "position_interval_sec": { "type": "integer", "minimum": 1 }
      },
      "description": "Reporting intervals"
    },
    "notes": {
      "type": "string",
      "maxLength": 500,
      "description": "Short rationale or notes"
    }
  }
}
