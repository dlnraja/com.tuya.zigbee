{
  "class": "light",
  "platforms": ["local"],
  "connectivity": ["zigbee"],
  "capabilities": [
    "onoff",
    "dim",
    "light_hue",
    "light_saturation",
    "light_mode"
  ],
  "capabilitiesOptions": {
    "onoff": {
      "setOnDim": false
    }
  },
  "images": {
    "large": "{{driverAssetsPath}}/images/large.png",
    "small": "{{driverAssetsPath}}/images/small.png"
  }
}