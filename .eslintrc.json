{
  "env": {
    "node": true,
    "es2022": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-unused-vars": [
      "warn"
    ],
    "no-console": [
      "off"
    ],
    "no-undef": [
      "error"
    ]
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    ".homeycompose/",
    "assets/",
    "drivers/**/assets/",
    "scripts/",
    "test/"
  ]
}
