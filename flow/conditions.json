{
  "is_online": {
    "title": {
      "en": "Device is !{{online|offline}}",
      "fr": "Appareil !{{en ligne|hors ligne}}"
    },
    "args": [
      {
        "name": "device",
        "type": "device",
        "filter": "driver_id=*"
      }
    ]
  },
  "battery_below": {
    "title": {
      "en": "Battery is below",
      "fr": "Batterie en dessous de"
    },
    "args": [
      {
        "name": "device",
        "type": "device",
        "filter": "capabilities=measure_battery"
      },
      {
        "name": "percentage",
        "type": "range",
        "min": 0,
        "max": 100,
        "step": 5,
        "label": "%",
        "labelMultiplier": 1
      }
    ]
  }
}