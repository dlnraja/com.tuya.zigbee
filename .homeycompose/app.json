  "flow": {
    "triggers": [
      {
        "id": "motion_detected",
        "title": {
          "en": "Motion detected"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=motion_sensor|presence_sensor|multisensor"
          }
        ]
      },
      {
        "id": "presence_detected",
        "title": {
          "en": "Presence detected"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=presence_sensor"
          }
        ]
      },
      {
        "id": "contact_changed",
        "title": {
          "en": "contact sensor changed"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=contact_sensor"
          }
        ]
      },
      {
        "id": "temperature_changed",
        "title": {
          "en": "Temperature changed"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=temperature_humidity_sensor|multisensor|air_quality_monitor|thermostat"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "is_motion_detected",
        "title": {
          "en": "Motion is detected"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=motion_sensor|presence_sensor|multisensor"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "turn_on_light",
        "title": {
          "en": "Turn on"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=smart_light|light_switch"
          }
        ]
      }
    ]
  },
