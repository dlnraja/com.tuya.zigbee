[
  {
    "id": "is_on",
    "title": {
      "en": "Device is !{{on|off}}",
      "fr": "L'appareil est !{{allumé|éteint}}"
    },
    "args": [
      {
        "type": "device",
        "name": "device",
        "filter": "capabilities=onoff"
      }
    ]
  },
  {
    "id": "alarm_active",
    "title": {
      "en": "Alarm is !{{active|inactive}}",
      "fr": "L'alarme est !{{active|inactive}}"
    },
    "args": [
      {
        "type": "device",
        "name": "device",
        "filter": "capabilities=alarm_motion|alarm_contact|alarm_smoke|alarm_co|alarm_water"
      }
    ]
  },
