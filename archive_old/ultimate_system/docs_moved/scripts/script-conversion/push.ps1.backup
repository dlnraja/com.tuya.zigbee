# Script simple pour pousser vers GitHub

# Configuration
$repoPath = "c:\Users\HP\Desktop\tuya_repair"
$githubUser = "dlnraja"
$githubEmail = "dylan.rajasekaram@gmail.com"
$repoName = "com.tuya.zigbee"
$branch = "master"

# Se déplacer dans le répertoire du projet
Set-Location -Path $repoPath

# Afficher la configuration actuelle
Write-Host "Configuration actuelle de Git:" -ForegroundColor Cyan
git config --list

# Configurer Git
Write-Host "`nConfiguration de Git..." -ForegroundColor Cyan
git config --global user.name $githubUser
git config --global user.email $githubEmail

# Afficher l'état actuel
Write-Host "`nÉtat actuel du dépôt:" -ForegroundColor Cyan
git status

# Ajouter tous les fichiers
Write-Host "`nAjout de tous les fichiers..." -ForegroundColor Cyan
git add .

# Créer un commit
Write-Host "`nCréation du commit..." -ForegroundColor Cyan
git commit -m "Mise à jour du projet Tuya Zigbee"

# Vérifier si le dépôt distant est configuré
$remoteUrl = git config --get remote.origin.url
if (-not $remoteUrl) {
    Write-Host "`nConfiguration du dépôt distant..." -ForegroundColor Cyan
    git remote add origin "https://github.com/$githubUser/$repoName.git"
}

# Pousser les modifications
Write-Host "`nPousse des modifications vers GitHub..." -ForegroundColor Cyan
Write-Host "URL du dépôt: https://github.com/$githubUser/$repoName.git" -ForegroundColor Yellow
Write-Host "Branche: $branch" -ForegroundColor Yellow

try {
    git push -u origin $branch --force
    Write-Host "`n✓ Modifications poussées avec succès!" -ForegroundColor Green
} catch {
    Write-Host "`n❌ Erreur lors du push: $_" -ForegroundColor Red
    Write-Host "Veuillez vérifier votre connexion Internet et vos identifiants GitHub." -ForegroundColor Yellow
}

# Afficher l'URL du dépôt
Write-Host "`nVotre dépôt est disponible à l'adresse:" -ForegroundColor Cyan
Write-Host "https://github.com/$githubUser/$repoName" -ForegroundColor Blue -BackgroundColor White

Read-Host "`nAppuyez sur Entrée pour quitter..."
