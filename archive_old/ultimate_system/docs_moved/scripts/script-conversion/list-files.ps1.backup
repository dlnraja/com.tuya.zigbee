# Script pour lister les fichiers d'un dossier sp√©cifique
param (
    [string]$directory = "drivers\plugs-TS011F"
)

$fullPath = Join-Path $PSScriptRoot $directory

if (-not (Test-Path $fullPath)) {
    Write-Host "Le dossier '$directory' est introuvable dans $PSScriptRoot" -ForegroundColor Red
    exit 1
}

Write-Host "Contenu de $fullPath`:" -ForegroundColor Cyan
Get-ChildItem -Path $fullPath -Recurse -File | ForEach-Object {
    $relativePath = $_.FullName.Substring($PSScriptRoot.Length + 1)
    Write-Host "- $relativePath (${$_.Length} octets)"
}
