{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/metadata.schema.json",
  "title": "Driver Metadata (Homey SDK3+)",
  "type": "object",
  "additionalProperties": false,
  "required": ["namespace", "slug", "vendor", "brand", "category", "features"],
  "properties": {
    "namespace": {
      "type": "string",
      "enum": ["tuya_zigbee", "zigbee"]
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$"
    },
    "vendor": {
      "type": "string",
      "minLength": 1
    },
    "brand": {
      "type": "string",
      "minLength": 1
    },
    "model_code": {
      "type": "string"
    },
    "product_ids": {
      "type": "array",
      "items": { "type": "string" }
    },
    "category": {
      "type": "string",
      "minLength": 1
    },
    "form_factor": {
      "type": "string"
    },
    "features": {
      "type": "array",
      "items": { "type": "string" }
    },
    "zigbee": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "endpoints": {
          "type": "array",
          "items": { "type": "object" }
        },
        "clusters": {
          "type": "object",
          "additionalProperties": { "type": "array" }
        },
        "dp_map": {
          "type": "object",
          "additionalProperties": { "type": "object" }
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "capabilities": {
      "type": "array",
      "items": { "type": "string" }
    },
    "settings": {
      "type": "object"
    },
    "images": {
      "type": "object",
      "properties": {
        "small": { "type": "string" },
        "large": { "type": "string" },
        "xlarge": { "type": "string" }
      }
    }
  }
}
