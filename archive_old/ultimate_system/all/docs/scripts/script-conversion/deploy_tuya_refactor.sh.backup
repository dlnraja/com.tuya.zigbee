#!/bin/bash
# deploy_tuya_refactor.sh

echo "🚀 Déploiement du projet Tuya Zigbee refactorisé..."

# 1. Validation finale
echo "📋 Validation finale..."
homey app validate --strict

# 2. Génération de la documentation
echo "📚 Génération de la documentation..."
node tools/generate_docs.js --all

# 3. Construction de la matrice finale
echo "📊 Construction de la matrice..."
node tools/build_matrix.js --final

# 4. Exécution des tests complets
echo "🧪 Exécution des tests..."
npm run test:complete

# 5. Rapport final
echo "📝 Génération du rapport final..."
node tools/generate_deployment_report.js

echo "✅ Déploiement terminé avec succès!"
echo "📦 Projet prêt pour la production avec 500+ devices supportés"
