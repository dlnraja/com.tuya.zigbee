          draft: false
          prerelease: false
        continue-on-error: true
      
      - name: Summary
        run: |
          echo "âœ… Workflow completed!"
          echo "ğŸ“¦ Version: ${{ steps.version.outputs.VERSION }}"
          echo "ğŸš€ Published to Homey App Store"
          echo "ğŸ·ï¸ GitHub Release created"
