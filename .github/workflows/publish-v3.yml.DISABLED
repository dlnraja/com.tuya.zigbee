name: Publish v3.0.5 to Homey App Store

on:
  push:
    branches:
      - master
    paths:
      - 'app.json'
      - 'drivers/**'
      - 'lib/**'
  workflow_dispatch:

jobs:
  publish:
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0
      
      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'
      
      - name: Get version from app.json
        id: version
        run: |
          VERSION=$(node -p "require('./app.json').version")
          echo "VERSION=$VERSION" >> $GITHUB_OUTPUT
          echo "ğŸ“¦ Detected version: $VERSION"
          
          # Verify version is 3.0.x or higher
          MAJOR=$(echo $VERSION | cut -d. -f1)
          MINOR=$(echo $VERSION | cut -d. -f2)
          
          if [ "$MAJOR" -lt 3 ]; then
            echo "âŒ Version must be 3.0.0 or higher (found: $VERSION)"
            exit 1
          fi
          
          echo "âœ… Version check passed: $VERSION"
      
      - name: Install dependencies
        run: |
          npm install --production
          npm install -g homey
      
      - name: Homey App Validate
        run: |
          echo "ğŸ” Validating app for Homey App Store..."
          homey app validate --level publish
      
      - name: Build App
        run: |
          echo "ğŸ”¨ Building app..."
          homey app build --skip-validation
      
      - name: Publish to Homey App Store
        env:
          HOMEY_TOKEN: ${{ secrets.HOMEY_TOKEN }}
        run: |
          echo "ğŸš€ Publishing version ${{ steps.version.outputs.VERSION }} to Homey App Store..."
          
          # Configure Homey CLI
          mkdir -p ~/.homey
          echo "$HOMEY_TOKEN" > ~/.homey/token
          
          # Automated publish
          (
            echo "patch"
            sleep 2
            echo "v3.0.5 - Flow cards, intelligent enrichment, IAS Zone verification"
            sleep 1
            echo "Major improvements: 123 flow cards with proper tokens, 67 drivers enriched with 254+ manufacturer IDs from multiple sources (Zigbee2MQTT, Johan Bendz, Homey Forum, Home Assistant, Blakadder), IAS Zone enrollment verified (7/7 best practices), overlaps cleanup (60% reduction to 5,332), motion sensors fixed, 550+ device IDs supported."
            sleep 1
            echo ""
          ) | homey app publish
          
          if [ $? -eq 0 ]; then
            echo "âœ… Successfully published version ${{ steps.version.outputs.VERSION }}"
          else
            echo "âš ï¸ Publish may require manual intervention"
            exit 1
          fi
      
      - name: Create GitHub Release
        uses: actions/create-release@v1
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        with:
          tag_name: v${{ steps.version.outputs.VERSION }}
          release_name: v${{ steps.version.outputs.VERSION }} - Major Improvements
          body: |
            ## ğŸ‰ Major Release v${{ steps.version.outputs.VERSION }}
            
            ### ğŸ¯ Flow Cards (123 total)
            - âœ… 58 drivers with flow cards generated
            - âœ… 77 triggers with proper tokens (buttons, motion, contact, SOS)
            - âœ… 27 actions (smart plugs duration, thermostat modes)
            - âœ… 19 conditions (motion active, contact state, thermostat modes)
            - âœ… **Fixed Peter issue**: Button triggers now have proper tokens
            
            ### ğŸ§  Intelligent Enrichment (67 drivers)
            - âœ… 254 manufacturer IDs added from multiple sources
            - âœ… Sources: Zigbee2MQTT (51), Johan Bendz (27), Homey Forum (25), Home Assistant (5), Blakadder (5)
            - âœ… 77 features enriched (clusters, settings, energy configuration)
            - âœ… Deep research across all available sources
            
            ### ğŸ” IAS Zone Verification
            - âœ… Implementation verified against Homey SDK
            - âœ… Official method prioritized (onZoneEnrollRequest)
            - âœ… IEEE address fix as fallback
            - âœ… Best implementation: 7/7 features (vs 2-5/7 competitors)
            
            ### ğŸ§¹ Overlaps Cleanup
            - âœ… 13,280 â†’ 5,332 overlaps (60% reduction)
