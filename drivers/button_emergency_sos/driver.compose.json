        {
          "id": "performance",
          "label": {
            "en": "Performance (More responsive)",
            "fr": "Performance (Plus réactif)"
          }
        },
        {
          "id": "balanced",
          "label": {
            "en": "Balanced",
            "fr": "Équilibré"
          }
        },
