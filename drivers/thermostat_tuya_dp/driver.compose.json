  "flow": {
    "triggers": [
      {
        "id": "thermostat_target_changed",
        "title": {
          "en": "Target temperature changed",
          "fr": "Température cible changée"
        },
        "tokens": [
          {
            "name": "target",
            "type": "number",
            "title": {
              "en": "Target (°C)",
              "fr": "Cible (°C)"
            },
            "example": 21
          }
        ]
      },
      {
        "id": "thermostat_mode_changed",
        "title": {
          "en": "Mode changed",
          "fr": "Mode changé"
        },
        "tokens": [
          {
            "name": "mode",
            "type": "string",
            "title": {
              "en": "Mode",
              "fr": "Mode"
            },
            "example": "heat"
          }
        ]
      },
      {
        "id": "thermostat_heating_started",
        "title": {
          "en": "Heating started",
          "fr": "Chauffage démarré"
        }
      },
      {
        "id": "thermostat_heating_stopped",
        "title": {
          "en": "Heating stopped",
          "fr": "Chauffage arrêté"
        }
      }
    ],
    "conditions": [
      {
        "id": "thermostat_is_heating",
        "title": {
          "en": "Thermostat !{{is|isn't}} heating",
          "fr": "Thermostat !{{chauffe|ne chauffe pas}}"
        }
      },
      {
        "id": "thermostat_target_is",
        "title": {
          "en": "Target temperature is !{{above|below}} threshold",
          "fr": "Température cible est !{{au-dessus|en-dessous}} du seuil"
        },
        "titleFormatted": {
          "en": "Target is !{{above|below}} [[threshold]] °C",
          "fr": "Cible est !{{au-dessus|en-dessous de}} [[threshold]] °C"
        },
        "args": [
          {
            "name": "threshold",
            "type": "number",
            "min": 5,
            "max": 35,
            "step": 0.5,
            "placeholder": {
              "en": "20"
            }
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "thermostat_set_preset",
        "title": {
          "en": "Set thermostat preset",
          "fr": "Définir preset thermostat"
        },
        "titleFormatted": {
          "en": "Set to [[preset]] preset",
          "fr": "Définir sur preset [[preset]]"
        },
        "args": [
          {
            "type": "dropdown",
            "name": "preset",
            "title": {
              "en": "Preset",
              "fr": "Preset"
            },
            "values": [
              {
                "id": "schedule",
                "title": {
                  "en": "Schedule",
                  "fr": "Programme"
                }
              },
              {
                "id": "manual",
                "title": {
                  "en": "Manual",
                  "fr": "Manuel"
                }
              },
              {
                "id": "comfort",
                "title": {
                  "en": "Comfort",
                  "fr": "Confort"
                }
              },
              {
                "id": "eco",
                "title": {
                  "en": "Eco",
                  "fr": "Éco"
                }
              },
              {
                "id": "away",
                "title": {
                  "en": "Away",
                  "fr": "Absent"
                }
              },
              {
                "id": "boost",
                "title": {
                  "en": "Boost",
                  "fr": "Boost"
                }
              }
            ]
          }
        ]
      }
    ]
