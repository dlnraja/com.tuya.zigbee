        },
        {
          "id": "battery",
          "label": {
            "en": "Battery Powered",
            "fr": "Sur Batterie"
          }
        }
      ],
      "hint": {
        "en": "Select power source manually or use auto-detection",
        "fr": "Sélectionnez la source d'alimentation manuellement ou utilisez la détection automatique"
      }
    },
    {
      "id": "battery_type",
      "type": "dropdown",
      "label": {
        "en": "Battery Type",
        "fr": "Type de Batterie"
      },
      "value": "auto",
      "values": [
        {
          "id": "auto",
          "label": {
            "en": "Auto Detect",
            "fr": "Détection Automatique"
          }
        },
        {
          "id": "CR2032",
          "label": {
            "en": "CR2032",
            "fr": "CR2032 (Pile Bouton 3V)"
          }
        },
        {
          "id": "CR2450",
          "label": {
            "en": "CR2450",
            "fr": "CR2450 (Pile Bouton 3V)"
          }
        },
        {
          "id": "AAA",
          "label": {
            "en": "AAA",
            "fr": "AAA"
          }
        },
        {
          "id": "AA",
          "label": {
            "en": "AA",
            "fr": "AA"
          }
        },
        {
          "id": "CR123A",
          "label": {
            "en": "CR123A",
            "fr": "CR123A"
          }
        }
      ],
      "hint": {
        "en": "Select battery type manually or use auto-detection based on voltage",
        "fr": "Sélectionnez le type de batterie manuellement ou utilisez la détection automatique basée sur la tension"
      }
    },
    {
      "id": "battery_low_threshold",
      "type": "number",
      "label": {
        "en": "Low Battery Threshold",
        "fr": "Seuil Batterie Faible (%)"
      },
      "value": 20,
      "min": 0,
      "max": 50,
      "step": 5,
      "hint": {
        "en": "Trigger low battery warning when below this percentage",
        "fr": "Déclencher l'alerte batterie faible en dessous de ce pourcentage"
      }
    },
    {
      "id": "battery_critical_threshold",
      "type": "number",
      "label": {
        "en": "Critical Battery Threshold",
        "fr": "Seuil Batterie Critique (%)"
      },
      "value": 10,
      "min": 0,
      "max": 30,
      "step": 5,
      "hint": {
        "en": "Trigger critical battery warning when below this percentage",
        "fr": "Déclencher l'alerte batterie critique en dessous de ce pourcentage"
      }
    },
    {
      "id": "enable_battery_notifications",
      "type": "checkbox",
      "label": {
        "en": "Enable Battery Notifications",
        "fr": "Activer Notifications Batterie"
      },
      "value": true,
      "hint": {
        "en": "Send flow notifications for battery events",
        "fr": "Envoyer des notifications de flow pour les événements de batterie"
      }
    },
    {
      "id": "battery_report_interval",
      "type": "number",
      "label": {
        "en": "Battery Report Interval",
        "fr": "Intervalle Rapport Batterie (heures)"
      },
      "value": 24,
      "min": 1,
      "max": 168,
      "step": 1,
      "hint": {
        "en": "How often to request battery status updates",
        "fr": "Fréquence de demande des mises à jour d'état de batterie"
      }
    },
    {
      "id": "optimization_mode",
      "type": "dropdown",
      "label": {
        "en": "Energy Optimization Mode",
        "fr": "Mode Optimisation Énergétique"
      },
      "value": "balanced",
      "values": [
        {
          "id": "performance",
          "label": {
            "en": "Performance (More responsive)",
            "fr": "Performance (Plus réactif)"
          }
        },
        {
          "id": "balanced",
          "label": {
            "en": "Balanced",
            "fr": "Équilibré"
          }
        },
        {
          "id": "power_saving",
          "label": {
            "en": "Power Saving (Longer battery)",
            "fr": "Économie d'énergie (Batterie plus longue)"
          }
        }
      ],
      "hint": {
        "en": "Balance between responsiveness and battery life",
        "fr": "Équilibre entre réactivité et durée de vie de la batterie"
      }
    },
    {
      "id": "show_voltage",
      "type": "checkbox",
      "label": {
        "en": "Show Battery Voltage",
        "fr": "Afficher Tension Batterie"
      },
      "value": false,
      "hint": {
        "en": "Display raw battery voltage in device settings",
        "fr": "Afficher la tension brute de la batterie dans les paramètres du périphérique"
      }
    },
    {
      "id": "enable_power_estimation",
      "type": "checkbox",
      "label": {
        "en": "Enable Power Estimation",
        "fr": "Activer Estimation Puissance"
      },
      "value": true,
      "hint": {
        "en": "Estimate power consumption when real measurement is not available (AC/DC devices only)",
        "fr": "Estimer la consommation quand la mesure réelle n'est pas disponible (appareils AC/DC seulement)"
      }
    },
    {
      "id": "invert_presence",
      "type": "checkbox",
      "label": {
        "en": "Invert Presence Detection",
        "fr": "Inverser Détection Présence"
      },
      "value": false,
      "hint": {
        "en": "Enable if presence shows active when room is empty and inactive when occupied (firmware bug workaround)",
        "fr": "Activer si la présence indique actif quand la pièce est vide et inactif quand occupée (contournement bug firmware)"
      }
    },
    {
      "id": "motion_detection_mode",
      "type": "dropdown",
      "label": {
        "en": "Motion Detection Mode",
        "fr": "Mode de Détection",
        "nl": "Bewegingsdetectie Modus",
        "de": "Bewegungserkennungsmodus"
      },
      "value": "1",
      "values": [
        {
          "id": "0",
          "label": {
            "en": "PIR Only",
            "fr": "PIR Uniquement",
            "nl": "Alleen PIR",
            "de": "Nur PIR"
          }
        },
        {
          "id": "1",
          "label": {
            "en": "PIR + Radar (Recommended)",
            "fr": "PIR + Radar (Recommandé)",
            "nl": "PIR + Radar (Aanbevolen)",
            "de": "PIR + Radar (Empfohlen)"
          }
        },
        {
          "id": "2",
          "label": {
            "en": "Radar Only",
            "fr": "Radar Uniquement",
            "nl": "Alleen Radar",
            "de": "Nur Radar"
          }
        }
      ],
      "hint": {
        "en": "ZG-204ZM: Select detection method (PIR for motion, Radar for presence)",
        "fr": "ZG-204ZM: Sélectionner la méthode de détection (PIR pour mouvement, Radar pour présence)"
      }
    },
    {
      "id": "motion_detection_sensitivity",
      "type": "number",
      "label": {
        "en": "Motion Sensitivity",
        "fr": "Sensibilité Mouvement",
        "nl": "Bewegingsgevoeligheid",
        "de": "Bewegungsempfindlichkeit"
      },
      "value": 5,
      "min": 0,
      "max": 10,
      "step": 1,
      "hint": {
        "en": "ZG-204ZM: PIR/Radar motion sensitivity (0=lowest, 10=highest)",
        "fr": "ZG-204ZM: Sensibilité PIR/Radar (0=minimum, 10=maximum)"
      }
    },
    {
      "id": "static_detection_sensitivity",
      "type": "number",
      "label": {
        "en": "Static Detection Sensitivity",
        "fr": "Sensibilité Détection Statique",
        "nl": "Statische Detectie Gevoeligheid",
        "de": "Statische Erkennungsempfindlichkeit"
      },
      "value": 5,
      "min": 0,
      "max": 10,
      "step": 1,
      "hint": {
        "en": "ZG-204ZM: Sensitivity for detecting stationary persons (0=lowest, 10=highest)",
        "fr": "ZG-204ZM: Sensibilité pour détecter les personnes immobiles (0=minimum, 10=maximum)"
      }
    },
    {
      "id": "fading_time",
      "type": "number",
      "label": {
        "en": "Presence Keep Time",
        "fr": "Temps de Maintien Présence",
        "nl": "Aanwezigheid Vasthoudtijd",
        "de": "Anwesenheit Haltezeit"
      },
      "value": 90,
      "min": 0,
      "max": 28800,
      "step": 10,
      "units": "s",
      "hint": {
        "en": "ZG-204ZM: How long presence stays active after last detection (seconds)",
        "fr": "ZG-204ZM: Durée de maintien de la présence après dernière détection (secondes)"
      }
    },
    {
      "id": "indicator",
      "type": "checkbox",
      "label": {
        "en": "LED Indicator",
        "fr": "Indicateur LED",
        "nl": "LED Indicator",
        "de": "LED-Anzeige"
      },
      "value": true,
      "hint": {
        "en": "ZG-204ZM: Enable/disable the LED indicator on the sensor",
        "fr": "ZG-204ZM: Activer/désactiver l'indicateur LED sur le capteur"
      }
    }
