  "settings": [
    {
      "id": "power_source",
      "type": "dropdown",
      "label": {
        "en": "Power Source",
        "fr": "Source d'Alimentation"
      },
      "value": "auto",
      "values": [
        {
          "id": "auto",
          "label": {
            "en": "Auto Detect",
            "fr": "Détection Automatique"
          }
        },
        {
          "id": "ac",
          "label": {
