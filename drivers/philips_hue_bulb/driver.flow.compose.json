{
  "triggers": [
    {
      "id": "hue_bulb_turned_on",
      "title": {
        "en": "Light turned on",
        "fr": "Lumière allumée"
      }
    },
    {
      "id": "hue_bulb_turned_off",
      "title": {
        "en": "Light turned off",
        "fr": "Lumière éteinte"
      }
    },
    {
      "id": "hue_bulb_dim_changed",
      "title": {
        "en": "Brightness changed",
        "fr": "Luminosité changée"
      },
      "tokens": [
        {
          "name": "dim",
          "type": "number",
          "title": {
            "en": "Brightness %",
            "fr": "Luminosité %"
          },
          "example": 75
        }
      ]
    },
    {
      "id": "hue_bulb_color_changed",
      "title": {
        "en": "Color changed",
        "fr": "Couleur changée"
      }
    },
    {
      "id": "hue_bulb_temperature_changed",
      "title": {
        "en": "Color temperature changed",
        "fr": "Température couleur changée"
      }
    }
  ],
  "conditions": [
    {
      "id": "hue_bulb_is_on",
      "title": {
        "en": "Light is on",
        "fr": "Lumière allumée"
      }
    }
  ],
  "actions": [
    {
      "id": "hue_bulb_turn_on",
      "title": {
        "en": "Turn on",
        "fr": "Allumer"
      }
    },
    {
      "id": "hue_bulb_turn_off",
      "title": {
        "en": "Turn off",
        "fr": "Éteindre"
      }
    },
    {
      "id": "hue_bulb_toggle",
      "title": {
        "en": "Toggle",
        "fr": "Basculer"
      }
    },
    {
      "id": "hue_bulb_set_brightness",
      "title": {
        "en": "Set brightness",
        "fr": "Définir luminosité"
      },
      "args": [
        {
          "name": "brightness",
          "type": "range",
          "min": 0,
          "max": 1,
          "step": 0.01
        }
      ]
    },
    {
      "id": "hue_bulb_set_color",
      "title": {
        "en": "Set color",
        "fr": "Définir couleur"
      },
      "args": [
        {
          "name": "color",
          "type": "color"
        }
      ]
    },
    {
      "id": "hue_bulb_set_temperature",
      "title": {
        "en": "Set color temperature",
        "fr": "Définir température"
      },
      "args": [
        {
          "name": "temperature",
          "type": "range",
          "min": 0,
          "max": 1,
          "step": 0.01
        }
      ]
    },
    {
      "id": "hue_bulb_dim_relative",
      "title": {
        "en": "Dim relative",
        "fr": "Variation relative"
      },
      "args": [
        {
          "name": "brightness_change",
          "type": "range",
          "min": -1,
          "max": 1,
          "step": 0.05
        }
      ]
    }
  ]
}
