{
  "id": "doorbell_camera_ac",
  "name": {
    "en": "Doorbell Camera Ac",
    "fr": "Doorbell Camera Ac",
    "nl": "Doorbell Camera Ac",
    "de": "Doorbell Camera Ac"
  },
  "class": "sensor",
  "capabilities": [
    "alarm_generic",
    "alarm_motion"
  ],
  "images": {
    "small": "./assets/small.png",
    "large": "./assets/large.png",
    "xlarge": "./assets/xlarge.png"
  },
  "zigbee": {
    "manufacturerName": [
      "Signify Netherlands B.V."
    ],
    "productId": [
      "HDB001"
    ],
    "endpoints": {
      "1": {
        "clusters": [
          0,
          3,
          4,
          5,
          1280
        ],
        "bindings": [
          5,
          1280
        ]
      }
    },
    "learnmode": {
      "image": "/drivers/doorbell_camera_ac/assets/large.png",
      "instruction": {
        "en": "1. Power on the device\n2. Press and hold pairing button for 5 seconds\n3. Wait for device to appear in Homey\n4. Device is now paired",
        "fr": "1. Allumez l'appareil\n2. Maintenez le bouton d'appairage pendant 5 secondes\n3. Attendez que l'appareil apparaisse dans Homey\n4. L'appareil est maintenant appairé",
        "nl": "1. Schakel het apparaat in\n2. Houd de koppelknop 5 seconden ingedrukt\n3. Wacht tot het apparaat verschijnt in Homey\n4. Het apparaat is nu gekoppeld",
        "de": "1. Schalten Sie das Gerät ein\n2. Halten Sie die Kopplungstaste 5 Sekunden lang gedrückt\n3. Warten Sie, bis das Gerät in Homey angezeigt wird\n4. Das Gerät ist jetzt gekoppelt"
      }
    }
  },
  "energy": {
    "approximation": {
      "usageOn": 5,
      "usageOff": 0.5
    }
  },
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "settings": [
    {
      "type": "group",
      "label": {
        "en": "Motion Detection",
        "fr": "Détection de mouvement",
        "nl": "Bewegingsdetectie",
        "de": "Bewegungserkennung"
      },
      "children": [
        {
          "id": "motion_timeout",
          "type": "number",
          "label": {
            "en": "Motion timeout (seconds)",
            "fr": "Délai de mouvement (secondes)",
            "nl": "Beweging timeout (seconden)",
            "de": "Bewegungs-Timeout (Sekunden)"
          },
          "value": 60,
          "min": 5,
          "max": 600,
          "step": 5,
          "units": {
            "en": "seconds",
            "fr": "secondes",
            "nl": "seconden",
            "de": "Sekunden"
          }
        }
      ]
    }
  ]
}
