        {
          "id": "battery_low_threshold",
          "type": "number",
          "label": "Low Battery Threshold (%)",
          "value": 20,
          "min": 5,
          "max": 50
        },
        {
          "id": "battery_notification",
          "type": "checkbox",
          "label": "Enable Battery Notifications",
          "value": true
        }
      ]
    },
    {
