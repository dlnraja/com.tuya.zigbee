{
  "id": "climate-trv-tuya",
  "name": { "en": "Tuya TRV", "fr": "Vanne thermostatique Tuya" },
  "class": "thermostat",
  "capabilities": ["target_temperature","measure_temperature","locked","alarm_battery"],
  "capabilitiesOptions": {
    "target_temperature": { "min": 5, "max": 30, "step": 0.5 },
    "measure_temperature": { "decimals": 1 },
    "alarm_battery": { "title": { "en": "Low battery", "fr": "Batterie faible" } }
  },
  "images": {
    "small": "drivers/climate-trv-tuya/assets/small.png",
    "large": "drivers/climate-trv-tuya/assets/large.png",
    "xlarge": "drivers/climate-trv-tuya/assets/xlarge.png"
  },
  "zigbee": {
    "manufacturerName": ["_TZE200_*","_TZ3000_*","Tuya","Moes","HOBEIAN"],
    "productId": ["TS0601","TS0201","TS0202"],
    "endpoints": {
      "1": {
        "clusters": {
          "input": ["genBasic", "genPowerCfg", "hvacThermostat", "hvacUserInterfaceCfg"],
          "output": ["genBasic", "genPowerCfg", "hvacThermostat"]
        }
      }
    }
  }
}
