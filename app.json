{
  "id": "com.dlnraja.tuya.zigbee",
  "name": "Tuya Zigbee Drivers",
  "version": "3.7.0",
  "sdk": 3,
  "category": "light",
  "author": "dlnraja",
  "compatibility": ">=3.0.0",
  "permissions": [
    "homey:device:tuya",
    "homey:device:zigbee"
  ],
  "drivers": [
    {
      "id": "climate-trv-tuya",
      "class": "thermostat",
      "capabilities": [
        "target_temperature",
        "measure_temperature",
        "locked",
        "alarm_battery"
      ],
      "capabilitiesOptions": {
        "target_temperature": {
          "min": 5,
          "max": 30,
          "step": 0.5
        }
      },
      "images": {
        "small": "assets/small.png",
        "large": "assets/large.png",
        "xlarge": "assets/xlarge.png"
      },
      "name": {
        "en": "climate-trv-tuya"
      }
    },
    {
      "id": "cover-curtain-tuya",
      "class": "windowcoverings",
      "capabilities": [
        "windowcoverings_set",
        "windowcoverings_state",
        "alarm_battery"
      ],
      "capabilitiesOptions": {
        "windowcoverings_set": {
          "min": 0,
          "max": 100,
          "step": 1
        }
      },
      "images": {
        "small": "assets/small.png",
        "large": "assets/large.png",
        "xlarge": "assets/xlarge.png"
      },
      "name": {
        "en": "cover-curtain-tuya"
      }
    },
    {
      "id": "plug-tuya-universal",
      "class": "socket",
      "capabilities": [
        "onoff",
        "measure_power",
        "meter_power"
      ],
      "capabilitiesOptions": {
        "measure_power": {
          "decimals": 0,
          "min": 0,
          "max": 3680
        },
        "meter_power": {
          "decimals": 3
        }
      },
      "images": {
        "small": "assets/small.png",
        "large": "assets/large.png",
        "xlarge": "assets/xlarge.png"
      },
      "name": {
        "en": "plug-tuya-universal"
      }
    },
    {
      "id": "remote-scene-tuya",
      "class": "sensor",
      "capabilities": [
        "alarm_battery"
      ],
      "images": {
        "small": "assets/small.png",
        "large": "assets/large.png",
        "xlarge": "assets/xlarge.png"
      },
      "name": {
        "en": "remote-scene-tuya"
      }
    }
  ],
  "flow": {},
  "capabilities": {}
}